<body>
  <div class="jumbotron text-center">
    <h1> Eat, Meet, MIT </h1>
    <div class="error"></div>
    <p> Welcome, {{currentUser}} (<a id="logoutLink" href="#">logout</a>)</p>
  </div>
  <div class="row text-center">
    
    <div class="col-md-12">

    {{#if diningHall}}
      <p>Need some help? Try this suggestion!</p>
      <p>{{diningHall}}</p>
      <p>{{diningTime}}pm</p>
    {{/if}}

    <p> Please create the Request Form: </p>
    <form id="requestForm">
        <b> Time: </b> <br>
            <div class="checkbox">
              <label><input type="checkbox" name="time" value="17">5pm</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="time" value="18">6pm</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="time" value="19">7pm</label>
            </div>
        <b> Dining Hall: </b> <br>
            <div class="checkbox">
              <label><input type="checkbox" name="place" value="Baker">Baker</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="place" value="Maseeh">Maseeh</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="place" value="McCormick">McCormick</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="place" value="Next">Next</label>
            </div>
            <div class="checkbox">
              <label><input type="checkbox" name="place" value="Simmons">Simmons</label>
            </div>
        
        <button type="submit" class='btn btn-default'>Submit</button>
        <button id='homeBtn' class='btn btn-default'>Back Home</button>
    </form>
    </div>
  </div>
</body>